        case "Faculty of Science": 
          options = ["MSc Marine Science","MSc Coastal and Ocean Management","MSc Mathematical and Scientific Computing","MSc Applied and Sustainable Chemistry"];
          break;
        case "Faculty of Social Sciences & Humanities": 
          options = ["MA Economics","MSc Financial Economics","MA Public Policy and Administration","Master of Regional Integration","MA Historical Studies","MA English Studies"];
