          options = ["MSc Network Security and Management","MSc Software Project Management","MSc Artificial Intelligence"];
          break;
        case "Faculty of Law & Management": 
          options = ["MBA (Specialisation: Human Resource Management)","Masters of Business Administration","MBA (Specialisation: Financial Services)","MSc Digital Marketing","LL.M. in Human Rights","LL.M. in Corporate Law","LL.M. in Competition Law and Public Policies","MSc in Finance","MSc Financial Technology"];
          break;
        case "Faculty of Medicine and Health Sciences": 
        options = ["MSc in Geriatric Care Management","Master in Public Health"];
