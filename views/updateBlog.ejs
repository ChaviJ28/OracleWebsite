<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="css/event.css">

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>


</head>

<body>




  <div class="container mt-5">
    <h3 class="text-center">Update Blog</h3>
    <form action="/blogs/<%= blog._id %>/update?_method=PUT" method="POST" class="mt-5" enctype="multipart/form-data">
      <div class="mb-3 row">
        <label for="staticFrom" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%= blog.title %>" name="title" placeholder="Title">
        </div>
      </div>



      <div class="mb-3 row">
        <label for="staticDate" class="col-sm-2 col-form-label">Date</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" value=<%=newDate %> name="date" placeholder="Date">
        </div>
      </div>


      <div class="mb-3 row">
        <label for="staticFrom" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%=blog.author %>" name="author" placeholder="Author">
        </div>
      </div>

      <div class="mb-3 row">
        <label for="staticFrom" class="col-sm-2 col-form-label">CatchPhrase</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" value="<%=blog.catch %>" name="catch"
            placeholder="Catchphrase on Card">
        </div>
      </div>

      <div class="mb-3 ">
        <textarea id="summernote" name="description"><%= blog.description %></textarea>
      </div>


      <label for="staticFrom" class="col-sm-2 col-form-label mb-3 mt-5 row">Current Image:</label>


      <div class="mb-2 row">
        <div class="col-3">
          <img style="width: 200px;" src=<%=blog.imageUrl %>>
        </div>
        <div class="col-8 row">
          <div class="mb-3 form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="updateImage" name="updateImage"
              onclick="changeDisplay()">
            <label class="form-check-label" for="flexSwitchCheckChecked">update Image</label>
          </div>



          <div class="mb-3" id="newImg" style="display: none;">
            <input class="form-control" id="newUpPhoto" type="file" accept="image/*" name="photo">
          </div>

        </div>

      </div>

      <input type="text" class="form-control d-none" value="<%= blog.imageUrl %>" name="oldImage" placeholder="Title">

      <div class="mb-3 text-end">
        <button type="submit" class="btn btn-primary">update blog</button>
      </div>
    </form>
    <a class="btn btn-lg btn-dark text-end mt-4 me-3 mb-4" href="/blogs/admin">back</a>
  </div>



  <script>
    $('#summernote').summernote({
      placeholder: 'Hello stand alone ui',
      tabsize: 2,
      height: 120,
      toolbar: [
        ['style', ['style']],
        ['font', ['bold', 'underline', 'clear']],
        ['color', ['color']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['table', ['table']],
        ['insert', ['link', 'picture', 'video']],
        ['fontname'],
        ['view', ['fullscreen', 'codeview', 'help']],

      ]
    });
  </script>

  <script>
    function changeDisplay() {
      var imageId = document.getElementById("newImg")
      var checked = document.getElementById("updateImage")

      if (checked.checked == true) {
        imageId.style.display = "block";
        document.getElementById("newUpPhoto").required = true;

      } else {
        imageId.style.display = "none";
        document.getElementById("newUpPhoto").required = false;
      }

    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</body>

</html>