<body>
  <%- include('partials/adminNav.ejs') %>
  <div class="container mt-5">
    <h3 class="text-center">New Banner</h3>
    <form action="/events/banners" method="POST" class="mt-5" enctype="multipart/form-data">

      <div class="mb-3">
        <input type="text" class="form-control" name="link" placeholder="Link" required>
      </div>

      <div class="mb-3">
        <input type="file" accept="image/*" name="photo" required>
      </div>

      <div class="mb-3 text-end">
        <button type="submit" class="btn btn-primary">Create Banner</button>
      </div>
    </form>
    <a class="btn btn-lg btn-dark text-end mt-4 me-3 mb-4" href="/events/banners">back</a>
  </div>

