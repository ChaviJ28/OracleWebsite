<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="/images/logo/new2.ico" type="image/x-icon">
  <title>UoM Oracle Club </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"
    integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <style>

  </style>

</head>

<body>
  <%- include('partials/adminNav.ejs') %>
    <div class="container mt-5 text-end">
      <h3 class="text-center mt-3 mb-5">All Members</h3>
      <div class="d-flex">
        <a class="btn"><span class="position-relative badge rounded-pill bg-danger">
            <%=members.length%>
          </span> members </a>
      </div>
      <div class="d-flex justify-content-end">

        <a class="btn btn-lg btn-dark text-end mb-5 me-3" href="/join">New Member</a>
        <a class="btn btn-lg btn-secondary text-end mb-5 me-3" href="/member/accept">Join Requests <span
            class="position-relative badge rounded-pill bg-danger">
            <%=count%>
          </span>
        </a>
        <a class="btn btn-lg btn-dark text-end mb-5 me-3" href="/member/download">Export Excel</a>
        <a class="btn btn-lg btn-danger text-end mb-5 me-3" href="/member/mail">Send Mail</a>

      </div>
      <%- include("partials/flash"); -%>
        <div>
          <table class="table table-bordered text-center">
            <thead>
              <tr class="table-dark">
                <th scope="col">No</th>
                <th scope="col">Email</th>
                <th scope="col" class="d-none d-lg-table-cell">Full Name</th>
                <th scope="col" class="d-none d-lg-table-cell">Phone No</th>
                <th scope="col" class="d-none d-lg-table-cell">Faculty</th>
                <th scope="col">View</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% members.reverse().forEach(function(member,i){%>

                <tr class="table-secondary">
                  <th scope="row">
                    <%= i + 1%>
                  </th>
                  <td>
                    <%=member.email %>
                  </td>
                  <td class="d-none d-lg-table-cell">
                    <%=member.fName + " " + member.lName %>
                  </td>
                  <td class="d-none d-lg-table-cell">
                    <%=member.phoneNo %>
                  </td>
                  <td class="d-none d-lg-table-cell">
                    <%=member.faculty %>
                  </td>

                  <td><a href="/member/view/<%= member._id %>" class="btn"><i class="bi bi-eye-fill"></i></a></td>

                  <td>
                    <form action="/member/<%= member._id %>/delete" method="POST"><button type="submit" class="btn"><i
                          class="bi bi-trash-fill btn"></i></button></form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>




</body>

</html>