<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
  <link rel="stylesheet" type="text/css" href="css/updatednavbar.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"
    integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <style>

  </style>

</head>

<body>
  <%- include('partials/adminNav.ejs') %>
  <%- include("partials/flash"); -%>

    <div class="container mt-5 text-end">

      <h3 class="text-center mt-3 mb-5">All Blogs</h3>
      <a class="btn btn-lg btn-dark text-end mb-5" href="/blogs/new">New Blog</a>
      <div>

        <table class="table table-bordered text-center">
          <thead>
            <tr class="table-dark">
              <th scope="col">No</th>
              <th scope="col">Title</th>
              <th scope="col" class="d-none d-lg-table-cell">Date</th>
              <th scope="col" class="d-none d-lg-table-cell">Author</th>
              <th scope="col">View</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% blogs.forEach(function(blog,i){%>

              <tr class="table-secondary">
                <th scope="row">
                  <%= i + 1%>
                </th>
                <td>
                  <%=blog.title %>
                </td>
                <td class="d-none d-lg-table-cell">
                  <%=blog.date.toDateString('en-US') %>
                </td>
                <td class="d-none d-lg-table-cell">
                  <%=blog.author %>
                </td>
                <td><a href="/blogs/view/<%= blog._id %>" class="btn"><i class="bi bi-eye-fill"></i></a></td>
                <td><a href="/blogs/<%= blog._id %>/update" class="btn"><i class="bi bi-pencil-square"></i></a></td>
                <td>
                  <form action="/blogs/<%= blog._id %>/delete" method="POST"><button type="submit" class="btn"><i
                        class="bi bi-trash-fill btn"></i></button></form>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>




</body>

</html>