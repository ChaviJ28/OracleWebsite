<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"
    integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <style>

  </style>

</head>

<body>
  <%- include('partials/adminNav.ejs') %>
    <div class="container mt-5 text-end">
      <h3 class="text-center mt-3 mb-5">Accept Members</h3>
      <div class=" " style="float:inline-start;">
        <span class="position-relative badge rounded-pill bg-danger">
          <%=members.length%>
        </span> new Join requests
      </div>
      <div class="d-flex justify-content-end">
        <a class="btn btn-lg btn-dark text-end mb-5 me-3" href="/member/admin">back</a>
        <a class="btn btn-lg btn-secondary text-end mb-5 me-3"><label for="selectAllbtn">Select All</label>
          <input class="form-check-input ms-1" type="checkbox" value="" id="selectAllbtn" checked>
        </a>
        <div class="btn btn-lg btn-danger text-end mb-5 me-3" id='accept'>Accept !</div>

      </div>
      <%- include("partials/flash"); -%>
        <div>
          <table class="table table-bordered text-center">
            <thead>
              <tr class="table-dark">
                <th scope="col">No</th>
                <th scope="col">Email</th>
                <th scope="col" class="d-none d-lg-table-cell">Full Name</th>
                <th scope="col" class="d-none d-lg-table-cell">Phone No</th>
                <th scope="col" class="d-none d-lg-table-cell">Faculty</th>
                <th scope="col">View</th>
                <th scope="col">Select</th>
              </tr>
            </thead>
            <tbody>
              <% members.reverse().forEach(function(member,i){%>

                <tr class="table-secondary">
                  <th scope="row">
                    <%= i + 1%>
                  </th>
                  <td>
                    <%=member.email %>
                  </td>
                  <td class="d-none d-lg-table-cell">
                    <%=member.fName + " " + member.lName %>
                  </td>
                  <td class="d-none d-lg-table-cell">
                    <%=member.phoneNo %>
                  </td>
                  <td class="d-none d-lg-table-cell">
                    <%=member.faculty %>
                  </td>

                  <td><a href="/member/view/<%= member._id %>" class="btn"><i class="bi bi-eye-fill"></i></a></td>

                  <td>
                    <input class="form-check-input ms-1" type="checkbox" value="<%= member._id %>" id="" checked>

                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>



    <script>
      const selectBtn = document.getElementById('selectAllbtn');
      const acceptBtn = document.getElementById('accept');
      const arr = Object.values(document.getElementsByTagName('input'));
      arr.shift();  //remove selectAllbtn input

      selectBtn.addEventListener("click", () => {
        if (selectBtn.checked) {
          //fr tou true
          arr.forEach(i => {
            i.checked = true;
          });
        } else {
          //fr tou false
          arr.forEach(i => {
            i.checked = false;
          });
        }
      })

      arr.forEach(i => {
        i.addEventListener('click', () => {
          if (i.checked) {
            //if all select is checked, then only make selectbtn checked
            var turn = true
            for (let i = 0; i < arr.length; i++) {
              if (arr[i].checked == false) {
                turn = false;
                break;
              }
            }
            if (turn) {
              selectBtn.checked = true;
            }
          } else {
            selectBtn.checked = false
          }
        })
      })

      acceptBtn.addEventListener('click', () => {
        var data = [];
        arr.forEach(i => {
          if (i.checked == true) {
            data.push(i.value)
          }
        })
        $.ajax({
          type: "POST",
          url: '/member/accept',
          data: JSON.stringify(data),
          contentType: "application/json; charset=utf-8",
          dataType: "json",
          error: function (e) {
            alert(e);
          },
          success: function (data) {
            window.location.href = data;
          }
        });
      })

    </script>



</body>

</html>